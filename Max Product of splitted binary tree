class Solution:
    def maxProduct(self, root: Optional[TreeNode]) -> int:
        subtree_sums = []

        # Helper function to calculate sums and store them
        def calculate_sum(node):
            if not node:
                return 0
            
            # Post-order traversal: sum is current val + left sum + right sum
            current_sum = node.val + calculate_sum(node.left) + calculate_sum(node.right)
            subtree_sums.append(current_sum)
            return current_sum

        # 1. Get the total sum of the tree
        total_sum = calculate_sum(root)
        
        # 2. Find the best split
        max_prod = 0
        for s in subtree_sums:
            product = s * (total_sum - s)
            if product > max_prod:
                max_prod = product
        
        # 3. Return result with modulo
        return max_prod % (10**9 + 7)
